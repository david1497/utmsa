<!DOCTYPE html>
<html>
<head>
	<title>SAUTM</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Droid+Sans+Mono' rel='stylesheet' type='text/css'>
</head>
<body>
  <div class="headtitle col-sm-12 col-md-12 col-lg-12 col-xs-12">
    <%= image_tag "logos.gif", class: "logos image-responsive col-sm-1 col-md-1 col-lg-1 col-xs-1" %>
    <%= image_tag "https://images.cooltext.com/4690233.png", alt: "Scoala Auto UTM", class: "image-responsive logotxt col-sm-8 col-md-8 col-lg-8 col-xs-8" %>
    <div class="profileinit col-sm-2 col-md-2 col-lg-2 col-xs-2">
      <% if user_signed_in? %>
        <%= image_tag current_user.avatar.thumb.url %>
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">
          <%= current_user.email %>
        </button>
        <%= button_to "Iesire", destroy_user_session_path, method: "delete", class: "btn btn-default" %>
      <% else %>
      <%= button_to "Logare", new_user_session_path, class: "btn btn-success col-sm-6 col-md-6 col-lg-6 col-xs-6" %>
      <%= button_to "Inregistrare", new_user_registration_path, method: :get, class: "btn btn-info col-sm-6 col-md-6 col-lg-6 col-xs-6" %>
      <% end %>
    </div>
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= current_user.name if current_user %></h4>
        </div>
        <div class="modal-body col-sm-12 col-md-12 col-xs-12 col-lg-12">
          <div class="initial col-sm-6 col-md-6 col-xs-6 col-lg-6">
            <%= current_user.avatar.profile.url if current_user %><br>
            <span>Nume: <%= current_user.name if current_user %></span><br>
            <span>Prenume: <%= current_user.lastname if current_user %></span><br>
            <span>E-mail: <%= current_user.email if current_user %></span><br>
            <span>Telefon: <%= current_user.tel if current_user %></span><br>
            <span>Data nasterii: <%=l current_user.birth if current_user %> </span><br>
            <span>Adresa: <%= current_user.adresa if current_user %></span><br>
            <span>Seria BI: <%= current_user.seria if current_user %></span><br>
            <span>IDNO: <%= current_user.idnp if current_user %></span><br>
            <span>Grupa: <%= current_user.grupe if current_user %></span>
          </div>
          <div class="ucontent">
            <span>Cursul</span>
            <%= current_user.comment if current_user %>
          </div>
          <div>
            <span>Anunturi</span>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>

  </div>
  <div class="button-wrapper">
      <%= link_to "Principala", abouts_path, class: "a-btn btn btn-info"  %>
    <div class="menu btn-group">
      <button type="button" class="men a-btn btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Bibliotecă 
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <%= link_to "Legislație", legislations_path, class: "a-btn" %> 
        <%= link_to "Informatii Utile", utilites_path, class: "a-btn" %>
        <%= link_to "Literatură", literatures_path, class: "a-btn" %>
      </ul>
    </div>
    <%= link_to "Galerie", articols_path, class: "a-btn btn btn-info" %>
    <%= link_to "Contacte", contactes_path, class: "a-btn btn btn-info" %>
    <%= link_to "Înscriere", comments_path, class: "a-btn btn btn-info" %>
  </div>

  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

  <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <%= image_tag "1.jpg", class: "image-responsive" %>
      </div>
      <div class="item">
        <%= image_tag "2.jpg", class: "image-responsive" %>
      </div>
    </div>

  <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="clear"></div>
  <div class="container-fluid">
    <div class="row col-sm-12 col-md-12 col-lg-12 col-xs-12">
      <div class="left col-sm-2 col-md-2 col-xs-2 col-lg-2">
        <% @banners.each do |ban| %>
          <tr>
            <td><%= link_to ban.image.thumb, ban.adres %></td>
            <td><%= ban.content %></td>
          </tr>
        <% end %>
      </div>
      <div class="right col-sm-2 col-md-2 col-xs-2 col-lg-2 col-sm-offset-8 col-md-offset-8 col-xs-offset-8 col-lg-offset-8">
        <% @categories.each do |category| %>
          <%= button_to category.name, category_path(category.id), method: :get, class: "cats btn btn-default" %>
        <% end %>
      </div>
<%= yield %>
    </div>
  </div>
</body>
</html>
