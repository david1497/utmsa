<%= tinymce %>
<%= form_for @sigurance, :html => { :class => "form-horizontal sigurance" } do |f| %>

  <% if @sigurance.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sigurance.errors.count, "error") %> prohibited this sigurance from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sigurance.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
      <div class="form-group col-sm-6 col-md-6 col-lg-6 col-xs-6">
        <%= f.label :nume, :class => 'control-label col-lg-2' %>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
          <%= f.text_field :nume, :class => 'form-control' %>
        </div>
        <%=f.error_span(:nume) %>
      </div>
      <div class="form-group col-sm-6 col-md-6 col-lg-6 col-xs-6">
        <%= f.label :prenume, :class => 'control-label col-lg-2' %>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
          <%= f.text_field :prenume, :class => 'form-control' %>
        </div>
        <%=f.error_span(:prenume) %>
      </div>
      <div class="form-group col-sm-6 col-md-6 col-lg-6 col-xs-6 col-sm-offest-6 col-md-offset-6 col-lg-offset-6 col-xs-offset-6">
        <%= f.label :telefon, :class => 'control-label col-lg-2' %>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
          <%= f.text_field :tel, :class => 'form-control' %>
        </div>
        <%=f.error_span(:tel) %>
      </div>
      <div class="form-group col-sm-6 col-md-6 col-lg-6 col-xs-6 col-sm-offest-6 col-md-offset-6 col-lg-offset-6 col-xs-offset-6">
        <%= f.label :email, :class => 'control-label col-lg-2' %>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
          <%= f.text_field :email, :class => 'form-control' %>
        </div>
        <%=f.error_span(:email) %>
      </div>

  <div class="form-group">
    <%= f.label :content, :class => 'control-label col-lg-2' %>
    <div class="col-lg-12">
      <%= f.text_area :content, :class => 'form-control' %>
    </div>
    <%=f.error_span(:content) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sigurances_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>