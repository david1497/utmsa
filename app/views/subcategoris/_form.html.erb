<%= form_for @subcategori, :html => { :class => "form-horizontal subcategori" } do |f| %>

    <% if @subcategori.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@subcategori.errors.count, "error") %> prohibited this subcategori from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @subcategori.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :categori_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :categori_id, :class => 'form-control' %>
    </div>
    <%= error_span(@subcategori[:categori_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@subcategori[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :content, :class => 'form-control' %>
    </div>
    <%= error_span(@subcategori[:content]) %>
  </div>
  <div class="control-group">
    <%= f.label :avatar, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :avatar, :class => 'form-control' %>
    </div>
    <%= error_span(@subcategori[:avatar]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            subcategoris_path, :class => 'btn btn-default' %>

<% end %>
