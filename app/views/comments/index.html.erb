<%- model_class = Comment -%>
<div class="panel center col-sm-8 col-md-8 col-xs-8 col-lg-8 col-sm-offset-2 col-md-offset-2 col-xs-offset-2 col-lg-offset-2">
<table class="table table-striped">
  <tbody>
    <% if current_user %>
      <div class="title alert alert-success">Înscrieri</div>
      <div class="alert alert-info">
        <% if current_user.comments %>
          <% current_user.comments.each do |comment| %>
            <%= raw comment.content %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              comment_path(comment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esti sigur?')) },
              :class => 'btn btn-danger' %>
          <% end %>
        <% end %>
      </div>
    <% end %>
    <%= link_to t('Înscriere nouă', :default => t("helpers.links.new")), new_comment_path, :class => 'btn btn-primary' %>
  </tbody>
</table>
</div>

