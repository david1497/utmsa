<%= form_for @legislation, :html => { :class => "form-horizontal legislation" } do |f| %>

    <% if @legislation.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@legislation.errors.count, "error") %> prohibited this legislation from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @legislation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :titlu, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :titlu, :class => 'form-control' %>
    </div>
    <%= error_span(@legislation[:titlu]) %>
  </div>
  <div class="control-group">
    <%= f.label :avatar, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :avatar, :class => 'form-control' %>
    </div>
    <%= error_span(@legislation[:avatar]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            legislations_path, :class => 'btn btn-default' %>

<% end %>
