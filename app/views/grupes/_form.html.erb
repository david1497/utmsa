<%= form_for @grupe, :html => { :class => "form-horizontal grupe" } do |f| %>

  <% if @grupe.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@grupe.errors.count, "error") %> prohibited this grupe from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @grupe.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :orar, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.cktext_area :orar, :class => 'form-control' %>
    </div>
    <%=f.error_span(:orar) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                grupes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
